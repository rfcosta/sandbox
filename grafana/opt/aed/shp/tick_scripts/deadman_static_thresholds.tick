var logLocation = '/var/log/shp/deadman_alerts.log'

var execScript = '/opt/aed/shp/bin/GenerateDeadmanEvent.py'

var thresholds = stream
    |from()
        .database('kpi')
        .retentionPolicy('days')
        .measurement('thresholds')
    |where(lambda: "type" == 'static')

thresholds
    |deadman(1.0, 3m)
        .id('Static_Threshold_Deadman')
        .message('Static Threshold Deadman')
        .details('{{ .Level }}: Static thresholds deadman')
        .log(logLocation)